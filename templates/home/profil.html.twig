{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="profil">
    <h1>Profil</h1>
    <p>Pseudo : {{app.user.pseudo}}</p>
    <p>Email : {{app.user.email}}</p>
    <a href="{{ path ('app_user_edit', {'id': app.user.id }) }}">Modifier votre profil</a>
    <a href="{{ path('app_user_delete', {'id': app.user.id }) }}" onclick="return confirm('Voulez-vous vraiment supprimer votre profil?');" >Supprimer votre profil</a>
</div>

{% endblock %}